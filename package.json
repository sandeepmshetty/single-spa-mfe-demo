{
  "name": "single-spa-mfe-demo",
  "version": "1.0.0",
  "description": "Single-SPA micro-frontend demo with React, Vue, and Angular",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "api:dev": "vercel dev",
    "api:dev:local": "node api/dev-server.js",
    "install:all": "npm install && npm run install:packages && cd tests && npm install",
    "install:packages": "npm install --workspace=packages/shell-app && npm install --workspace=packages/react-mfe && npm install --workspace=packages/vue-mfe && npm install --workspace=packages/angular-mfe && npm install --workspace=packages/shared-library",
    "test:integration": "cd tests && npm test",
    "test:integration:watch": "cd tests && npm run test:watch",
    "test:integration:coverage": "cd tests && npm run test:coverage",
    "dev": "concurrently \"npm run dev:shared\" \"npm run dev:react\" \"npm run dev:vue\" \"npm run dev:shell\"",
    "dev:all": "concurrently \"npm run dev:shared\" \"npm run dev:react\" \"npm run dev:vue\" \"npm run dev:angular\" \"npm run dev:shell\"",
    "dev:shell": "npm run start --workspace=packages/shell-app",
    "dev:react": "npm run start --workspace=packages/react-mfe",
    "dev:vue": "npm run start --workspace=packages/vue-mfe",
    "dev:angular": "npm run start --workspace=packages/angular-mfe",
    "dev:shared": "npm run dev --workspace=packages/shared-library",
    "build": "npm run build:shared && npm run build:react && npm run build:vue && npm run build:angular && npm run build:shell",
    "build:shell": "npm run build --workspace=packages/shell-app",
    "build:react": "npm run build --workspace=packages/react-mfe",
    "build:vue": "npm run build --workspace=packages/vue-mfe",
    "build:angular": "npm run build --workspace=packages/angular-mfe",
    "build:shared": "npm run build --workspace=packages/shared-library",
    "test": "npm run test --workspaces && npm run test:integration",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && node scripts/clean-node-modules.cjs",
    "deploy:all": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-vercel.ps1 -Production",
    "deploy:preview": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-vercel.ps1",
    "deploy:shell": "cd packages/shell-app && npm run build && vercel --prod",
    "deploy:react": "cd packages/react-mfe && npm run build && vercel --prod",
    "deploy:vue": "cd packages/vue-mfe && npm run build && vercel --prod",
    "deploy:angular": "cd packages/angular-mfe && npm run build && vercel --prod",
    "deploy:shared": "cd packages/shared-library && npm run build && vercel --prod",
    "preview:all": "concurrently \"npm run preview:shared\" \"npm run preview:react\" \"npm run preview:vue\" \"npm run preview:angular\" \"npm run preview:shell\"",
    "preview:shell": "cd packages/shell-app && vercel",
    "preview:react": "cd packages/react-mfe && vercel",
    "preview:vue": "cd packages/vue-mfe && vercel",
    "preview:angular": "cd packages/angular-mfe && vercel",
    "preview:shared": "cd packages/shared-library && vercel",
    "sonar:start": "docker-compose -f docker-compose.sonar.yml up -d",
    "sonar:stop": "docker-compose -f docker-compose.sonar.yml down",
    "sonar:scan": "npm run sonar:analyze",
    "sonar:analyze": "powershell -ExecutionPolicy Bypass -File ./scripts/sonar-analyze.ps1",
    "sonar:logs": "docker-compose -f docker-compose.sonar.yml logs -f sonarqube",
    "sonar:clean": "docker-compose -f docker-compose.sonar.yml down -v",
    "sonar:wait": "node scripts/wait-for-sonar.js",
    "sonar:status": "powershell -Command \"Invoke-WebRequest -Uri http://localhost:9001/api/system/status | Select-Object -ExpandProperty Content | ConvertFrom-Json | Format-List\"",
    "sonar:rules": "powershell -ExecutionPolicy Bypass -File ./scripts/sonar-manage-rules.ps1",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "format:check": "prettier --check \"packages/**/src/**/*.{js,jsx,ts,tsx,vue}\"",
    "format:write": "prettier --write \"packages/**/src/**/*.{js,jsx,ts,tsx,vue}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose up --build -d",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "free-stack:start": "docker-compose -f docker-compose.free-stack.yml up -d",
    "free-stack:stop": "docker-compose -f docker-compose.free-stack.yml down",
    "free-stack:logs": "docker-compose -f docker-compose.free-stack.yml logs -f",
    "free-stack:restart": "docker-compose -f docker-compose.free-stack.yml restart",
    "free-stack:clean": "docker-compose -f docker-compose.free-stack.yml down -v",
    "cloudflare:deploy": "node scripts/deploy-cloudflare.js --production",
    "cloudflare:preview": "node scripts/deploy-cloudflare.js",
    "secrets:pull": "doppler secrets download --no-file --format env > .env.local",
    "secrets:push": "doppler secrets upload .env.production",
    "monitor:errors": "start https://sentry.io",
    "monitor:analytics": "start https://app.posthog.com",
    "monitor:metrics": "start https://grafana.com",
    "setup:verify": "node scripts/verify-setup.js",
    "setup:help": "type YOUR_NEXT_STEPS.md"
  },
  "devDependencies": {
    "@rrweb/types": "^2.0.0-alpha.18",
    "@types/node": "^20.19.21",
    "@types/systemjs": "^6.15.3",
    "@vercel/node": "^3.0.0",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "lerna": "^7.4.2",
    "process": "^0.11.10",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vercel": "^32.4.1"
  },
  "dependencies": {
    "@sentry/browser": "^7.85.0",
    "@sentry/tracing": "^7.85.0",
    "@supabase/supabase-js": "^2.39.0",
    "posthog-js": "^1.96.0",
    "resend": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/single-spa-mfe-demo.git"
  },
  "keywords": [
    "single-spa",
    "micro-frontend",
    "react",
    "vue",
    "angular",
    "vercel",
    "microservices"
  ],
  "author": "Sandeep Shetty",
  "license": "MIT"
}
